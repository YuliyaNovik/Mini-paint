<Window x:Class="Mini_paint.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mini_paint"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.45*"/>
            <RowDefinition Height="0.45*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.75*"/>
            <ColumnDefinition Width="0.25*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="listFigure" Grid.Column="1" HorizontalAlignment="Center" Height="20" Margin="0,5,0,0" VerticalAlignment="Top" Width="110"/>
        <Canvas x:Name="canvas" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Margin="0,0,0,0"/>
        <ComboBox x:Name="listColor" Grid.Column="1" HorizontalAlignment="Center" Height="20" Margin="0,10,0,0" Grid.Row="2" VerticalAlignment="Top" Width="100"/>
        <Frame x:Name="frame" Grid.Column="1" Grid.Row="1"/>

    </Grid>
</Window>
